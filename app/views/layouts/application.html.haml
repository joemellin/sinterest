!!!
%html
%head
  %title Sinterest
  = stylesheet_link_tag    "application", :media => "all" 
  = javascript_include_tag "application" 
  = csrf_meta_tags

%body
  .container
    = render 'layouts/header'
    - no_dismiss ||= false
    - if flash[:notice].present? and !flash[:notice].blank?
      .alert.alert-success
        - unless no_dismiss
          %a{:class => "close", :href => "#", "data-dismiss" => "alert"} x
        %p= raw flash[:notice].html_safe

    - if flash[:alert].present? and !flash[:alert].blank?
      .alert.alert-error
        - unless no_dismiss
          %a{:class => "close", :href => "#", "data-dismiss" => "alert"} x
        %p= raw flash[:alert].html_safe


    = yield 
    = render 'layouts/footer'
    %hr
    